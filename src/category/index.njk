{% set cats = collections.categoryList %}

<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Categories â€“ The Argosy</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <style>
    :root{ --maxw:900px; --gap:1rem; --rule:#e6e6e6; }
    body{ margin:0; font-family:"EB Garamond",Garamond,Georgia,serif; }
    header,main,footer{ max-width:var(--maxw); margin:0 auto; padding:1rem; }
    header{ border-bottom:1px solid var(--rule); }
    .brand{ font-weight:700; font-size:1.5rem; }
    ul{ list-style:none; padding:0; display:grid; gap:.5rem; grid-template-columns:repeat(auto-fill, minmax(220px, 1fr)); }
    li{ border:1px solid var(--rule); border-radius:8px; padding:.75rem 1rem; }
    a{ text-decoration:none; color:inherit; } a:hover{ text-decoration:underline; }
    .count{ color:#666; font-size:.95rem; }
  </style>
</head>
<body>
  <header><div class="brand"><a href="/">The Argosy</a></div></header>
  <main>
    <h1>Categories</h1>
    <ul>
      {% for c in cats %}
        <li>
          <a href="/category/{{ c.key }}/"><strong>{{ c.name }}</strong></a>
          <div class="count">{{ c.count }} article{% if c.count != 1 %}s{% endif %}</div>
        </li>
      {% endfor %}
    </ul>
  </main>
  <footer><p>&copy; {{ page.date | date('yyyy') }} Argosy.</p></footer>
</body>
</html>
