---
title: Categories
permalink: /categories/index.html
layout: layouts/base.njk
---

{% set cats = collections.categoryList | sort(attribute='name') %}
{% set total = cats | length %}

<style>
  /* scoped to this page */
  .cats-wrap { max-width: 960px; margin: 0 auto; }
  .cats-grid {
    list-style: none; padding: 0; margin: .75rem 0 0;
    display: grid; gap: .75rem;
    grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
  }
  .cat-card {
    border: 1px solid var(--rule, #e6e6e6);
    border-radius: 10px;
    padding: .85rem 1rem;
    background: #fff;
    transition: box-shadow .15s ease, transform .15s ease;
  }
  .cat-card:hover { box-shadow: 0 6px 18px rgba(0,0,0,.06); transform: translateY(-1px); }
  .cat-link {
    display: inline-flex; align-items: baseline; gap: .5rem;
    text-decoration: none; color: inherit;
    font-family: "Newsreader","EB Garamond",Georgia,serif; font-weight: 600;
    letter-spacing: .01em;
  }
  .cat-count { color: #666; font-size: .95rem; }
</style>

<div class="cats-wrap">
  <header class="section-head" style="margin: .25rem 0 1rem;">
    <h1 style="margin:0;">Categories</h1>
    <div class="meta">{{ total }} categor{% if total == 1 %}y{% else %}ies{% endif %}</div>
  </header>

  <ul class="cats-grid">
    {% for c in cats %}
      <li class="cat-card">
        <a class="cat-link" href="/category/{{ c.key }}/">
          <span>{{ c.name }}</span>
        </a>
        <div class="cat-count">
          {{ c.count }} article{% if c.count != 1 %}s{% endif %}
        </div>
      </li>
    {% endfor %}
  </ul>
</div>
