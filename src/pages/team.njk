      font-weight:700;
      letter-spacing:.006em;
      line-height:1.12;
      text-wrap:balance;
    }
    h1{ font-size:clamp(1.9rem,3.6vw,2.6rem); margin:.35rem 0 .6rem; }
    h2{ font-size:clamp(1.2rem,2.2vw,1.4rem); margin:0 0 .25rem; }
    h3{ font-size:clamp(1.05rem,1.6vw,1.15rem); margin:.15rem 0 .35rem; color:#222; }

    .intro{ max-width:72ch; margin-top:.25rem; color:#222; }

    .team-grid{
      display:grid;
      gap:var(--gap);
      grid-template-columns:repeat(auto-fill,minmax(280px,1fr));
      margin-top:1rem;
    }
    .card{
      background:var(--card-bg);
      border:1px solid var(--rule);
      border-radius:14px;
      padding:1rem;
      display:grid;
      grid-template-columns:72px 1fr;
      grid-template-areas:
